	//- title=posts.nameView
	script.
		function showMeau(){
			var show = document.getElementById("showMeau")
			var meauOn = document.getElementById("mobie_on")
			var fixed = document.getElementById("fixed")
			var fixeds = document.getElementById("fixeds")
			show.addEventListener("click", showMeaus)
			meauOn.addEventListener("click", closeMeau)
			setTimeout(function(){ fixed.classList.remove('not') }, 1500);
			setTimeout(function(){ fixeds.classList.add('not') }, 1500);
			function showMeaus(){
				console.log("hh")
				meauOn.style.left = "0"
				fixed.classList.add('of')
			}
			function closeMeau(){
				meauOn.style.left = "-310px"
				fixed.classList.remove('of')
			}
		}
		function reload(){
			if(
				getStorage('loaded') == '' 
				|| getStorage('loaded') == '0'
			){
				setStorage('loaded', '1');
				window.location.reload();
				return true;
			}else{
				setStorage('loaded', '0');
				return true;
			}
		}
		function setStorage(name, value){
			return sessionStorage.setItem(name, value);
		}
		function getStorage(name){
			return sessionStorage.getItem(name) || '';
		}
		showMeau();
		setTimeout(reload, 1000);
		var scroll1 = window.pageYOffset;
		window.onscroll = function(){
		var scroll2 = window.pageYOffset;
		if (scroll1 > scroll2) {
			document.querySelector('.homeNow').style.top = "86%";
			document.querySelector('.homeNow_go').style.top = "86%";
		}else{
			document.querySelector('.homeNow').style.top = "100%";
			document.querySelector('.homeNow_go').style.top = "100%";
           

		}
		scroll1 = scroll2;
		}


