		script(type='text/javascript').
			function showMeau(){
				var show = document.getElementById("showMeau")
				var meauOn = document.getElementById("mobie_on")
				var fixed = document.getElementById("fixed")
				var fixeds = document.getElementById("fixeds")
				show.addEventListener("click", showMeaus)
				meauOn.addEventListener("click", closeMeau)
				setTimeout(function(){ fixed.classList.remove('not') }, 1000);
				setTimeout(function(){ fixeds.classList.add('not') }, 1000);

				function showMeaus(){
					console.log("hh")
					meauOn.style.left = "0"
					fixed.classList.add('of')
				}
				function closeMeau(){
					meauOn.style.left = "-310px"
					fixed.classList.remove('of')
				}
			}
			showMeau();
			function reload(){
				if(
					getStorage('loaded') == '' 
					|| getStorage('loaded') == '0'
				){
					setStorage('loaded', '1');
					window.location.reload();
					return true;
				}else{
					setStorage('loaded', '0');
					return true;
				}
			}
			function setStorage(name, value){
				return sessionStorage.setItem(name, value);
			}
			function getStorage(name){
				return sessionStorage.getItem(name) || '';
			}
			showMeau();
			setTimeout(reload, 500);
			$(".owl-carousel").owlCarousel({
			  autoplay: true,
			  autoplayTimeout: 5000,
			  autoplayHoverPause: true,
			  loop: true,
			  margin: 50,
			  responsiveClass: true,
			  nav: true,
			  loop: true,
			  stagePadding: 100,
			  responsive: {
			    0: {
			      items: 1
			    },
			    568: {
			      items: 2
			    },
			    600: {
			      items: 3
			    },
			    1000: {
			      items: 3
			    }
			  }
			});
			$(document).ready(function () {
			  $(".popup-youtube").magnificPopup({
			    disableOn: 320,
			    type: "iframe",
			    mainClass: "mfp-fade",
			    removalDelay: 160,
			    preloader: false,
			    fixedContentPos: true
			  });
			});
			$(".item").magnificPopup({
			  delegate: "a"
			});
