
extends ../layOut/homeComeon

block conten
	.loader.loader-black.loader-1(id="fixeds")
	.show_meau(id="mobie_on")
		i.fas.fa-times
		ul
			li 
				a(href="/") Trang Chủ
			li 
				a(href="/bangxephang") Bảng xếp hạng
			li 
				a(href="/congai") Con gái thích
			li 
				a(href="/addTemview") Theo dõi
	.wapper_home.not(id="fixed" style="opacity: 0; transition: 0.5s;")
		.nav_bar_menu.fixed-top
			.meau_mobi(id="showMeau")
				i.fas.fa-ellipsis-v
			.wapper_meau
				.meau_nav
					ul
						li 
							a(href="/") Trang Chủ
						li 
							a(href="/bangxephang") Bảng xếp hạng
						li 
							a(href="/congai") Con gái thích
						li 
							a(href="/addTemview") Theo dõi
		.herder_img
			.wapper_baner
				.img_baner
		.container-fluid.custom_col
			.row
				.col-12
					.wapper_baner
						.img_baner
			.wapper_header
				.row
					.col-12
						.wapper_conten
							form.search-wrapper.cf(active="/search". method="GET")
								input(type="text", name="q")
								button search
							each post in posts
								div.col-xs-12.col-sm-12.col-md-3.col-lg-3.col-12-custom
									a(href=`/search/zon/${post._id}`)
										.wapper_conten_xephang
											.should
												img(src=post.imageHome)
												p=post.nameHome
													b=post.chapHome
							
	//- title=posts.nameView
	script.
		function showMeau(){
			var show = document.getElementById("showMeau")
			var meauOn = document.getElementById("mobie_on")
			var fixed = document.getElementById("fixed")
			var fixeds = document.getElementById("fixeds")
			show.addEventListener("click", showMeaus)
			meauOn.addEventListener("click", closeMeau)
			setTimeout(function(){ fixed.classList.remove('not') }, 1000);
			setTimeout(function(){ fixed.classList.add('nots') }, 2500);
			setTimeout(function(){ fixeds.classList.add('not') }, 1000);
			function showMeaus(){
				console.log("hh")
				meauOn.style.left = "0"
				fixed.classList.add('of')
			}
			function closeMeau(){
				meauOn.style.left = "-310px"
				fixed.classList.remove('of')
			}
		}
		showMeau();

